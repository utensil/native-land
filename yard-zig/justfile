export HOMEBREW_NO_AUTO_UPDATE := "1"

default:
  just --list

# prep:
#   brew install zig

prep-term:
  which asdf || brew install asdf

prep-asdf:
  asdf plugin add zig https://github.com/zigcc/asdf-zig.git
  asdf plugin update zig

prep:
  asdf install zig 0.13.0
  asdf set zig 0.13.0
  # now zig is available either by `asdf which zig` or adding $HOME/.asdf/shims to your PATH

[no-cd]
build:
  zig build

[no-cd]
run:
  zig build run

[no-cd]
test:
  zig build test

new PROJ:
  #!/usr/bin/env zsh
  mkdir {{PROJ}}
  cd {{PROJ}}
  zig init

try-mlx INPUT MODEL_TYPE="qwen" NUM_TOKENS="1000":
  #!/usr/bin/env zsh
  cd example-xp
  if [ ! -d "MLX.zig" ]; then
    git clone https://github.com/jaco-bro/MLX.zig.git
  else
    (cd MLX.zig && git pull)
  fi
  cd MLX.zig
  zig build
  ./zig-out/bin/llm --num-tokens={{NUM_TOKENS}} --model-type={{MODEL_TYPE}} "{{INPUT}}"


